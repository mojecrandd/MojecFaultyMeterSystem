
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDisco.cshtml";
}


<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Hi, welcome back!</h4>
                <p class="mb-0">Manage your faulty meter</p>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Disco</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Dashboard</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">

                    <div class="stat-icon d-inline-block">
                        <a href="@Url.Action("Completedcases", "Disco")" class="btn btn-outline-primary">
                            <i class="ti-bar-chart text-success border-success"></i>
                        </a>
                    </div>


                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Complete</div>
                        <div class="stat-digit">@ViewBag.Completed</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                    <div class="stat-icon d-inline-block">
                        <a href="@Url.Action("PendingMeters", "Disco")" class="btn btn-outline-primary">
                            <i class="ti-bar-chart text-primary border-primary"></i>
                        </a>
                    </div>
                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Pending</div>
                        <div class="stat-digit">@ViewBag.Pending</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                    <div class="stat-icon d-inline-block">
                        <a href="@Url.Action("Acceptedcases", "Disco")" class="btn btn-outline-primary">
                            <i class="ti-bar-chart text-pink border-pink"></i>
                        </a>
                    </div>
                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Recieved</div>
                        <div class="stat-digit">@ViewBag.Solved</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                    <div class="stat-icon d-inline-block">
                        <a href="@Url.Action("Dashboard", "Disco")" sclass="btn btn-outline-primary">
                            <i class="ti-bar-chart text-danger border-danger"></i>
                            </a>
                    </div>
                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Total</div>
                        <div class="stat-digit">@ViewBag.Total</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>