
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Hi, welcome back!</h4>
                <p class="mb-0">Manage your faulty meter</p>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Admin</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Dashboard</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                   
                        <div class="stat-icon d-inline-block">
                              <a href="@Url.Action("Completecases", "Admin")" class="btn btn-outline-primary">
                            <i class="ti-bar-chart text-success border-success"></i>
                                  </a>
                        </div>
                    
                       
                        <div class="stat-content d-inline-block">
                            <div class="stat-text">Complete</div>
                            <div class="stat-digit">@ViewBag.Completed</div>
                        </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                    <div class="stat-icon d-inline-block">
                        <a href="@Url.Action("PendingMeters", "Admin")" class="btn btn-outline-primary">
                            <i class="ti-bar-chart text-primary border-primary"></i>
                            </a>
                    </div>
                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Pending</div>
                        <div class="stat-digit">@ViewBag.Pending</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                    <div class="stat-icon d-inline-block">
                        <a href="@Url.Action("Acceptedcases", "Admin")" class="btn btn-outline-primary">
                            <i class="ti-bar-chart text-pink border-pink"></i>
                            </a>
                    </div>
                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Recieved</div>
                        <div class="stat-digit">@ViewBag.Solved</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card">
                <div class="stat-widget-one card-body">
                    <div class="stat-icon d-inline-block">
                        <i class="ti-bar-chart text-danger border-danger"></i>
                    </div>
                    <div class="stat-content d-inline-block">
                        <div class="stat-text">Total</div>
                        <div class="stat-digit">@ViewBag.Total</div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <iframe title="FMMS Analytics" width="1140" height="541.25" src="https://app.powerbi.com/reportEmbed?reportId=b0ab1701-b141-4d34-b488-9b1f622f5e3d&autoAuth=true&ctid=9ee56573-5943-4094-8ffe-facc2b05aeea" frameborder="0" allowFullScreen="true"></iframe>
    </div>
</div>

