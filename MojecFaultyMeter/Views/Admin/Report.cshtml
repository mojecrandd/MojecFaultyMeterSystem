
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Hi, welcome back!</h4>
                <p class="mb-0">Manage your faulty meter</p>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Admin</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Dashboard</a></li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="card-body">
                    <div class="horizontal-form">
                        <div class="card-title">
                            <h4>Download Report</h4>
                        </div>

                        @using (Html.BeginForm("DiscoReport", "Admin", FormMethod.Post))
                        {
                            <div class="form-horizontal">
                                <div class="row">
                                    <div class="form-row col-lg-12">
                                        <div class="col-lg-3">
                                            <label class="control-label">From</label>
                                            <input type="date" class="form-control" name="from" reqired>
                                        </div>
                                        <div class="col-lg-3">
                                            <label class="control-label">To</label>
                                            <input type="date" class="form-control" name="to" required>
                                        </div>
                                        <div class="col-lg-2">
                                            <label class="control-label">Disco</label>
                                            @Html.DropDownList("discoId", new SelectList(ViewBag.Disco, "DiscoID", "DiscoAB"), "All", new { @class = "form-control" })
                                        </div>
                                        <div class="col-lg-2">
                                            <label class="control-label">Status</label>
                                            <select class="form-control" name="status">
                                                <option>All</option>
                                                <option>Accepted</option>
                                                <option>Rejected</option>
                                                <option>Pending</option>
                                                <option>Awaiting Replacement</option>
                                                <option>Awaiting Dispatch</option>
                                                <option>Dispatched</option>
                                                <option>Repairing</option>
                                                <option>Solved</option>
                                                <option>Recieved</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-2">
                                            <br />
                                            <label class="control-label"></label>
                                            <button type="submit" class="btn btn-primary">Download</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        @using (Html.BeginForm("FaultReport", "Admin", FormMethod.Post))
                        {
                            <div class="form-horizontal">
                                <div class="row">
                                    <div class="form-row col-lg-12">
                                        <div class="col-lg-3">
                                            <label class="control-label">From</label>
                                            <input type="date" class="form-control" name="from" reqired>
                                        </div>
                                        <div class="col-lg-3">
                                            <label class="control-label">To</label>
                                            <input type="date" class="form-control" name="to" required>
                                        </div>
                                        <div class="col-lg-2">
                                            <label class="control-label">Fault</label>
                                            @Html.DropDownList("fault", new SelectList(ViewBag.Fault, "Faultname", "Faultname"), "--Select Fault--", new { @class = "form-control" })
                                        </div>
                                        <div class="col-lg-2">
                                            <label class="control-label">Disco</label>
                                            @Html.DropDownList("discoId", new SelectList(ViewBag.Disco, "DiscoID", "DiscoAB"), "All", new { @class = "form-control" })
                                        </div>
                                        <div class="col-lg-2">
                                            <br />
                                            <label class="control-label"></label>
                                            <button type="submit" class="btn btn-primary">Download</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

